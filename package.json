{
  "name": "@sebkolind/use-resize",
  "version": "1.0.3",
  "description": "Listen on any components width and height via a convenient hook. Built for Preact with Typescript.",
  "author": "Sebastian K. Sorensen <sks1993@gmail.com>",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "exports": "dist/index.modern.js",
  "module": "dist/index.module.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "microbundle --globals preact/hooks=hooks",
    "dev": "microbundle watch",
    "size": "size-limit"
  },
  "keywords": [
    "react",
    "preact",
    "hooks",
    "resize"
  ],
  "size-limit": [ 
      {
          "path": "dist/index.js"
      }
  ],
  "license": "MIT",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/node": "^14.14.37",
    "microbundle": "^0.13.0",
    "preact": "^10.5.13",
    "size-limit": "^4.10.2",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "preact": "^10.5.13"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebkolind/use-resize.git"
  },
  "bugs": {
    "url": "https://github.com/sebkolind/use-resize/issues"
  },
  "homepage": "https://github.com/sebkolind/use-resize#readme"
}
